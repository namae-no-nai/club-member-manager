<div class="min-h-screen bg-gray-50 py-8 px-4">
  <div class="max-w-7xl mx-auto">
    <!-- Header with Back Button -->
    <div class="mb-6 flex items-center justify-between">
      <%= link_to root_path, class: "inline-flex items-center text-gray-600 hover:text-red-600 transition" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        <span class="font-medium">Voltar</span>
      <% end %>
      <h1 class="text-3xl font-bold text-gray-800"><%= @partner.full_name %></h1>
      <%= link_to edit_partner_path(@partner), class: "inline-flex items-center px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700 transition" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Editar
      <% end %>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Left Column: Partner Information -->
      <div class="lg:col-span-1 space-y-6">
        <!-- Personal Information Card -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="bg-red-600 px-6 py-4">
            <h2 class="text-lg font-semibold text-white">Informações Pessoais</h2>
          </div>
          <div class="p-6 space-y-4">
            <div>
              <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Nome Completo</p>
              <p class="text-base font-medium text-gray-900"><%= @partner.full_name %></p>
            </div>
            <div>
              <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">CPF</p>
              <p class="text-base font-medium text-gray-900"><%= @partner.cpf %></p>
            </div>
            <div>
              <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">CR</p>
              <p class="text-base font-medium text-gray-900"><%= @partner.registry_certificate %></p>
            </div>
            <div>
              <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Expiração CR</p>
              <p class="text-base font-medium text-gray-900">
                <%= @partner.registry_certificate_expiration_date&.strftime("%d/%m/%Y") || "-" %>
              </p>
            </div>
            <% if @partner.address.present? %>
              <div>
                <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Endereço</p>
                <p class="text-base font-medium text-gray-900"><%= @partner.address %></p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Membership Card -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="bg-red-600 px-6 py-4">
            <h2 class="text-lg font-semibold text-white">Filiação</h2>
          </div>
          <div class="p-6 space-y-4">
            <div>
              <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Número de Filiação</p>
              <p class="text-base font-medium text-gray-900"><%= @partner.filiation_number || "-" %></p>
            </div>
            <div>
              <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Primeira Filiação</p>
              <p class="text-base font-medium text-gray-900">
                <%= @partner.first_filiation_date&.strftime("%d/%m/%Y") || "-" %>
              </p>
            </div>
          </div>
        </div>

        <!-- Biometrics Card -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="bg-red-600 px-6 py-4">
            <h2 class="text-lg font-semibold text-white">Biometria</h2>
          </div>
          <div class="p-6">
            <% if @partner.fingerprint_verification.present? %>
              <div class="flex items-center gap-2 text-green-700">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="font-medium">Cadastrada</span>
              </div>
            <% else %>
              <div class="space-y-3">
                <div class="flex items-center gap-2 text-orange-600">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                  </svg>
                  <span class="font-medium">Não Cadastrada</span>
                </div>
                <%= link_to capture_fingerprint_verification_path(partner_id: @partner.id), method: :post, class: "block w-full text-center bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition font-medium" do %>
                  Cadastrar Agora
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Right Column: Records and Actions -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="text-lg font-semibold text-gray-800 mb-4">Ações Rápidas</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
            <%= link_to new_event_path(partner_id: @partner.id), class: "flex items-center justify-center px-6 py-4 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition shadow-sm" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
              </svg>
              <span class="font-medium">Nova Habitualidade</span>
            <% end %>
            <%= link_to new_weapon_path(partner_id: @partner.id, return_to: partner_path(@partner)), class: "flex items-center justify-center px-6 py-4 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition shadow-sm" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
              </svg>
              <span class="font-medium">Nova Arma</span>
            <% end %>
          </div>
        </div>

        <!-- Records Tabs -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="border-b border-gray-200">
            <nav class="flex -mb-px">
              <%= link_to last_weapons_records_path(partner_id: @partner), data: { turbo_frame: "last_records" }, class: "flex-1 py-4 px-6 text-center font-medium text-gray-600 hover:text-blue-600 hover:border-blue-600 border-b-2 border-transparent transition" do %>
                <div class="flex items-center justify-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                  </svg>
                  Armas
                </div>
              <% end %>
              <%= link_to last_events_records_path(partner_id: @partner.id), data: { turbo_frame: "last_records" }, class: "flex-1 py-4 px-6 text-center font-medium text-gray-600 hover:text-blue-600 hover:border-blue-600 border-b-2 border-transparent transition" do %>
                <div class="flex items-center justify-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
                  </svg>
                  Habitualidades
                </div>
              <% end %>
            </nav>
          </div>
          
          <div class="p-6">
            <%= turbo_frame_tag "last_records" do %>
              <div class="text-center py-12">
                <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                <p class="text-gray-500 text-lg">Selecione uma aba acima para visualizar os registros</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

