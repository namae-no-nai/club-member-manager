<div class="flex justify-center items-center min-h-screen gap-2">
  <div class="w-full max-w-2xl">
    <div class="text-center mb-6">
      <h1 class="text-3xl font-bold text-red-600">Editar Socio</h1>
    </div>

    <%= form_with(model: @partner, url: partner_path(@partner, return_to: params[:return_to]), method: :patch, class: "bg-gray-100 p-6 rounded-lg shadow-md max-w-lg mx-auto") do |form| %>
      <% if @partner.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
          <strong class="font-bold"><%= pluralize(@partner.errors.count, "erro") %> impediram a atualização:</strong>
          <ul class="mt-2">
            <% @partner.errors.full_messages.each do |message| %>
              <li class="text-sm"><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="grid grid-cols-1 gap-4" data-controller="nested-form">
        <div>
          <%= form.label :full_name, 'Nome completo', class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :full_name, class: "form-input w-full mt-1 p-2 border rounded-md text-gray-700" %>
        </div>

        <div>
          <%= form.label :cpf, 'CPF', class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :cpf, class: "form-input w-full mt-1 p-2 border rounded-md text-gray-700" %>
        </div>

        <div>
          <%= form.label :registry_certificate, 'CR', class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :registry_certificate, class: "form-input w-full mt-1 p-2 border rounded-md text-gray-700" %>
        </div>

        <div>
          <%= form.label :registry_certificate_expiration_date, 'Data de expiração CR', class: "block text-sm font-medium text-gray-700" %>
          <%= form.date_select :registry_certificate_expiration_date, start_year: 1925, end_year: 2125, class: "form-input w-full mt-1 p-2 border rounded-md" %>
        </div>

        <div>
          <%= form.label :address, 'Endereço', class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :address, class: "form-input w-full mt-1 p-2 border rounded-md text-gray-700" %>
        </div>

        <div>
          <%= form.label :filiation_number, 'Número de filiação', class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :filiation_number, class: "form-input w-full mt-1 p-2 border rounded-md text-gray-700" %>
        </div>

        <div>
          <%= form.label :first_filiation_date, 'Data da primeira filiação', class: "block text-sm font-medium text-gray-700" %>
          <%= form.date_select :first_filiation_date, start_year: 1925, end_year: 2125, class: "form-input w-full mt-1 p-2 border rounded-md" %>
        </div>

        <!-- Biometric Proof Image Section -->
        <div class="mt-4 border-t pt-4">
          <h3 class="text-lg font-semibold text-gray-700 mb-4">Foto Biométrica</h3>

          <% if @partner.biometric_proof_image.attached? %>
            <div class="mb-4">
              <%= image_tag biometric_proof_image_partner_path(@partner),
                  alt: "Foto biométrica",
                  class: "w-full max-w-md border border-gray-300 rounded-md" %>
            </div>
          <% else %>
            <p class="text-gray-500 mb-4">Nenhuma foto biométrica cadastrada.</p>
          <% end %>

          <!-- Camera Capture Section (hidden when image exists) -->
          <% unless @partner.biometric_proof_image.attached? %>
            <div class="camera-section mb-4" id="camera-section" style="display: none;">
              <div class="flex gap-4">
                <div class="camera flex-1">
                  <video id="video" class="w-full border border-gray-300 rounded-md" style="display: none;">Video stream not available.</video>
                  <%= link_to "Capturar Foto", "#", id: "start-button", class: "mt-2 bg-blue-600 text-white px-4 py-2 rounded-md shadow-md hover:bg-blue-700 transition", style: "display: none;" %>
                  <%= link_to "Permitir Câmera", "#", id: "allow-button", class: "mt-2 bg-green-600 text-white px-4 py-2 rounded-md shadow-md hover:bg-green-700 transition" %>
                </div>

                <div class="output flex-1">
                  <img id="photo" src="" alt="A captura aparecerá aqui." class="w-full border border-gray-300 rounded-md" style="display: none;" />
                  <canvas id="canvas" style="display: none;"></canvas>
                </div>
              </div>
            </div>
          <% end %>

          <div class="flex gap-2">
            <% if @partner.biometric_proof_image.attached? %>
              <%= link_to "Remover Biometria",
                  biometric_proof_image_partner_path(@partner),
                  method: :delete,
                  class: "bg-red-600 text-white px-4 py-2 rounded-md shadow-md hover:bg-red-700 transition" %>
            <% else %>
              <%= link_to "Capturar Biometria", "#", id: "capture-button", class: "bg-blue-600 text-white px-4 py-2 rounded-md shadow-md hover:bg-blue-700 transition" %>
              <%= link_to "Salvar Foto", "#", id: "submit-capture-button", class: "bg-green-600 text-white px-4 py-2 rounded-md shadow-md hover:bg-green-700 transition", style: "display: none;" %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="mt-6 flex justify-between">
        <%= form.submit "Salvar Alterações", class: "bg-red-600 text-white px-4 py-2 rounded-md shadow-md hover:bg-red-700 transition" %>
        <%= link_to 'Cancelar', last_records_path, class: "text-red-600 hover:bg-red-100 px-6 py-3 border border-red-600 rounded-md text-center ml-4 transition-all" %>
      </div>
    <% end %>
  </div>
  <div class="w-full max-w-2xl">
    <div class="min-h-screen bg-gray-100 p-8">
      <div class="flex space-x-4 border-b-2 border-gray-300 mb-6">
        <%= link_to "Armas", last_weapons_records_path(partner_id: @partner), data: { turbo_frame: "last_records" }, class: "px-4 py-2 text-sm font-medium text-gray-700 hover:text-blue-600 border-b-2 border-transparent hover:border-blue-400 transition" %>
        <%= link_to "Habitualidades", last_events_records_path(partner_id: @partner.id), data: { turbo_frame: "last_records" }, class: "px-4 py-2 text-sm font-medium text-gray-700 hover:text-blue-600 border-b-2 border-transparent hover:border-blue-400 transition" %>
      </div>

      <%= turbo_frame_tag "last_records" do %>
        <p class="text-gray-500">Selecione uma aba para visualizar os dados.</p>
      <% end %>
    </div>
  </div>
</div>

<% unless @partner.biometric_proof_image.attached? %>
<script>
  (function() {
    const width = 720;
    let height = 0;
    let streaming = false;
    let videoStream = null;
    let capturedImageData = null;

    const video = document.getElementById("video");
    const canvas = document.getElementById("canvas");
    const photo = document.getElementById("photo");
    const startButton = document.getElementById("start-button");
    const allowButton = document.getElementById("allow-button");
    const captureButton = document.getElementById("capture-button");
    const submitCaptureButton = document.getElementById("submit-capture-button");
    const cameraSection = document.getElementById("camera-section");

    // Show camera section when "Capturar Biometria" is clicked
    if (captureButton) {
      captureButton.addEventListener("click", () => {
        cameraSection.style.display = "block";
      });
    }

    // Get the media stream
    if (allowButton) {
      allowButton.addEventListener("click", () => {
        navigator.mediaDevices
          .getUserMedia({ video: true, audio: false })
          .then((stream) => {
            videoStream = stream;
            video.srcObject = stream;
            video.play();
            allowButton.style.display = "none";
            video.style.display = "block";
            startButton.style.display = "block";
          })
          .catch((err) => {
            console.error(`An error occurred: ${err}`);
            alert("Erro ao acessar a câmera: " + err.message);
          });
      });
    }

    // Listen for the video to start playing
    if (video) {
      video.addEventListener("canplay", (ev) => {
        if (!streaming) {
          height = video.videoHeight / (video.videoWidth / width);

          video.setAttribute("width", width);
          video.setAttribute("height", height);
          canvas.setAttribute("width", width);
          canvas.setAttribute("height", height);
          streaming = true;
        }
      });
    }

    // Handle clicks on the capture button
    if (startButton) {
      startButton.addEventListener("click", (ev) => {
        ev.preventDefault();
        takePicture();
      });
    }

    // Clear the photo box
    function clearPhoto() {
      if (!canvas || !photo) return;
      const context = canvas.getContext("2d");
      context.fillStyle = "#aaaaaa";
      context.fillRect(0, 0, canvas.width, canvas.height);

      const data = canvas.toDataURL("image/png");
      photo.setAttribute("src", data);
    }

    // Capturing a frame from the stream
    function takePicture() {
      if (!canvas || !photo) return;
      const context = canvas.getContext("2d");
      if (width && height) {
        canvas.width = width;
        canvas.height = height;
        context.drawImage(video, 0, 0, width, height);

        const data = canvas.toDataURL("image/png");
        photo.setAttribute("src", data);
        photo.style.display = "block";
        
        // Store base64 data
        capturedImageData = data;
        
        // Show submit button
        if (submitCaptureButton) {
          submitCaptureButton.style.display = "block";
        }
      } else {
        clearPhoto();
      }
    }

    // Submit captured image
    if (submitCaptureButton) {
      submitCaptureButton.addEventListener("click", (ev) => {
        ev.preventDefault();
        
        if (!capturedImageData) {
          alert("Por favor, capture uma foto primeiro.");
          return;
        }

        // Create a form to submit the image
        const form = document.createElement("form");
        form.method = "POST";
        form.action = "<%= biometric_proof_images_partner_path(@partner) %>";
        
        // Add CSRF token
        const csrfToken = document.querySelector('meta[name="csrf-token"]');
        if (csrfToken) {
          const csrfInput = document.createElement("input");
          csrfInput.type = "hidden";
          csrfInput.name = "authenticity_token";
          csrfInput.value = csrfToken.getAttribute("content");
          form.appendChild(csrfInput);
        }

        // Add biometric_proof parameter
        const imageInput = document.createElement("input");
        imageInput.type = "hidden";
        imageInput.name = "biometric_proof";
        imageInput.value = capturedImageData;
        form.appendChild(imageInput);

        document.body.appendChild(form);
        form.submit();
      });
    }

    // Initialize with empty photo
    clearPhoto();

    // Clean up stream when form is submitted or page is unloaded
    window.addEventListener("beforeunload", () => {
      if (videoStream) {
        videoStream.getTracks().forEach(track => track.stop());
      }
    });
  })();
</script>
<% end %>
