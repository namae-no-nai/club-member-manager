<div class="flex justify-center items-center min-h-screen">
  <div class="w-full max-w-2xl">
    <div class="text-center mb-6">
      <h1 class="text-3xl font-bold text-red-600">Identificar Praticante</h1>
    </div>

    <%= form_with(url: sessions_path, local: false, data: { controller: 'new-session', action: "ajax:success->new-session#create ajax:error->new-session#error"}, class: "bg-gray-100 p-6 rounded-lg shadow-md max-w-lg mx-auto") do |form| %>
      <div class="grid grid-cols-1 gap-4">
        <%= form.label :partner_id, 'Praticante', class: "block text-sm font-medium text-gray-700" %>
        <%= form.collection_select :partner_id, Partner.all, :id, :friendly_name, class: "form-input w-full mt-1 p-2 border rounded-md text-gray-700" %>

        <%= link_to 'Caso não encontrou usuário clique aqui para criar um novo', new_registration_path, class: 'text-blue-600 hover:text-blue-800 font-medium underline' %>
      </div>

      <div class="mt-6 flex justify-between">
        <%= form.submit "Identificar", class: "bg-red-600 text-white px-4 py-2 rounded-md shadow-md hover:bg-red-700 transition" %>
        <%= link_to 'Voltar', root_path, class: "text-red-600 hover:bg-red-100 px-6 py-3 border border-red-600 rounded-md text-center ml-4 transition-all" %>
      </div>
    <% end %>
  </div>
</div>
