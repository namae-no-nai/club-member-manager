<%= turbo_frame_tag "last_records" do %>
  <div class="bg-white p-4 rounded-lg shadow mb-4">
    <%= form_with url: last_partner_records_path, method: :get, class: "flex items-center gap-4" do |form| %>
      <%= form.label :search, 'Buscar:', class: "text-sm font-medium text-gray-700" %>
      <%= form.text_field :search, placeholder: "Nome do SÃ³cio", class: "flex-1 border border-gray-300 rounded-md px-3 py-1 focus:ring-red-500 focus:border-red-500" %>
      <%= form.submit "Buscar", class: "bg-red-600 text-white px-4 py-1.5 rounded-md hover:bg-red-700 transition" %>
    <% end %>
  </div>

  <div class="space-y-4">
    <% @partners.each do |partner| %>
      <div class=" flex items-center justify-between bg-white p-4 rounded-lg shadow">
        <div class="w-1/3 flex items-center gap-2">
          <span class="text-gray-800 font-medium"><%= partner.full_name %></span>
          <% if partner.fingerprint_verification.present? %>
            <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 border border-green-200" title="Digital cadastrada">
              <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M6.625 2.655A9 9 0 0119 11a1 1 0 11-2 0 7 7 0 00-9.625-6.492 1 1 0 11-.75-1.853zM4.662 4.959A1 1 0 014.75 6.37 6.97 6.97 0 003 11a1 1 0 11-2 0 8.97 8.97 0 012.25-5.953 1 1 0 011.412-.088z" clip-rule="evenodd"></path>
                <path fill-rule="evenodd" d="M5 11a5 5 0 1110 0 1 1 0 11-2 0 3 3 0 10-6 0c0 1.677-.345 3.276-.968 4.729a1 1 0 11-1.838-.789A9.964 9.964 0 005 11zm8.921 2.012a1 1 0 01.831 1.145 19.86 19.86 0 01-.545 2.436 1 1 0 11-1.92-.558c.207-.713.371-1.445.49-2.192a1 1 0 011.144-.83z" clip-rule="evenodd"></path>
                <path fill-rule="evenodd" d="M10 10a1 1 0 011 1c0 2.236-.46 4.368-1.29 6.304a1 1 0 01-1.838-.789A13.952 13.952 0 009 11a1 1 0 011-1z" clip-rule="evenodd"></path>
              </svg>
              Digital
            </span>
          <% end %>
        </div>
        <span class="w-1/3 text-gray-800 font-medium"><%= partner.filiation_number %></span>

        <%= link_to "Editar", edit_partner_path(partner),data: { turbo: false }, class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition" %>
      </div>
    <% end %>
  </div>

  <div class="mt-6 flex justify-center">
    <%= paginate @partners, theme: 'tailwind', params: { turbo_frame: "last_records" } %>
  </div>
<% end %>
