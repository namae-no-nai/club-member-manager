<%= turbo_frame_tag "last_records" do %>
  <% unless @partner_id.present? %>
    <div class="bg-white p-4 rounded-lg shadow mb-4">
      <%= form_with url: last_events_records_path, method: :get, class: "flex items-center gap-4" do |form| %>
        <%= form.label :search, 'Buscar:', class: "text-sm font-medium text-gray-700" %>
        <%= form.text_field :search, placeholder: "Nome do SÃ³cio", class: "flex-1 border border-gray-300 rounded-md px-3 py-1 focus:ring-red-500 focus:border-red-500" %>
        <%= form.submit "Buscar", class: "bg-red-600 text-white px-4 py-1.5 rounded-md hover:bg-red-700 transition" %>
      <% end %>
    </div>
  <% end %>

  <div class="space-y-4">
    <% @events.each do |event| %>
      <div class="flex items-center justify-between bg-white p-4 rounded-lg shadow">
        <div class="w-1/3 text-gray-800 font-medium truncate"><%= event.partner.full_name %></div>
        <div class="w-1/3 text-gray-800 font-medium"><%= event.weapon.serial_number %></div>
        <div class="w-1/3 text-gray-800 font-medium"><%= event.created_at.strftime('%d/%m/%Y %H:%M') %></div>
        <%= link_to "Editar", edit_event_path(event, partner_id: @partner_id), data: { turbo: false }, class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition inline-block" %>
        <%= link_to "Deletar",
                    event_path(event, partner_id: @partner_id),
                    method: :delete,
                    data: { confirm: "Tem certeza?", turbo: false },
                    class: "bg-red-500 text-white px-4 py-2 mx-2 rounded hover:bg-red-600 transition inline-block" %>
        </div>
    <% end %>
  </div>


  <div class="mt-6 flex justify-center">
    <%= paginate @events, theme: 'tailwind', params: { turbo_frame: "last_records", partner_id: @partner_id } %>
  </div>
<% end %>
